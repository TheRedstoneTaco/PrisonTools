  </head>

  <body>

    <div class="container">

      <h1 class="text-center">Sign Up</h1>

      <form action="/register" method="POST">
        <br>
        <label for="username">Username</label>
        <input required id="username" type="text" name="username" placeholder="John Doe" class="form-control">
        <br>
        <label for="password">Password</label>
        <input required id="password" type="password" name="password" placeholder="********" class="form-control">
        <br>
        <button class="btn btn-outline-primary btn-lg btn-block" type="submit">
          Sign Up
        </button>
      </form
      <br>
      <br>
      <a href="/login" class="btn btn-outline-success btn-lg btn-block">
        Login
      </a>
      <br>
      <a href="/" class="btn btn-outline-secondary btn-lg btn-block">
        Home
      </a>

    </div>

  </body>

</html>
